<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="event_form_inherit" model="ir.ui.view">
        <field name="name">event_form_inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allday']" position="after">
                <!-- Add your fields or attributes here -->
                <field name="no_email" invisible="False"/>
            </xpath>
            <xpath expr="(\\page[@groups='base.group_no_one')[0]"  position="attributes">
                    <attribute name="groups">base.group_user</attribute>
            </xpath>
            <xpath expr="(\\page[@groups='base.group_no_one')[1]"  position="attributes">
                    <attribute name="groups">base.group_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>
