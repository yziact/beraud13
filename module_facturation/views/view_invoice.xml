<odoo>
    <record id="inherit_tree_invoice" model="ir.ui.view">
        <field name="name">invoice tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="name"/>
            </xpath>
            <!--display number that can be a proforma or an invoice-->
            <xpath expr="//field[@name='number']" position="after">
                <field name="proforma_number" string="Proforma"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_form_invoice" model="ir.ui.view">
        <field name="name">invoice form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">

            <!--Add a kind of proforma number-->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="proforma_number" string="Pro-forma NÂ°" attrs="{'invisible': [('state','not in',('proforma','proforma2'))]}"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_shipping_id"  attrs="{'invisible':[('type', 'in', ['in_invoice', 'in_refund'])]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="contact"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="contact_affaire" string="V/Contact affaire"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Commercial</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                <attribute name="digits">(10, 2)</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_tax']" position="attributes">
                <attribute name="digits">(10, 2)</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="attributes">
                <attribute name="digits">(10, 2)</attribute>
            </xpath>
            <!--info facture IS-->
            <xpath expr="//tree[@editable='bottom']" position="attributes">
                <attribute name="editable"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="before">
                <field name="date_move"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="num_bl"/>
                <field name="date_bl"/>
                <field name="serial"/>
            </xpath>

        </field>
    </record>

    <record id="account_invoice_form_add_bl_inherited" model="ir.ui.view">
        <field name="name">Account Invoice Form Add BL</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="last_bl_from_bc" string="Dernier BL du BC"/>
                <field name="bl_date" string="Date BL du BC"/>

            </xpath>
        </field>
    </record>

    <record id="inherit_form_invoice_supplier" model="ir.ui.view">
        <field name="name">invoice form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <!-- gestion probleme arrondi-->
            <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                <attribute name="digits">(10, 2)</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_tax']" position="attributes">
                <attribute name="digits">(10, 2)</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="attributes">
                <attribute name="digits">(10, 2)</attribute>
            </xpath>

            <xpath expr="//tree[@editable='bottom']" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//tree/field[@name='name']" position="before">
                <field name="date_move"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="num_bl"/>
                <field name="date_bl"/>
                <field name="serial"/>
            </xpath>
        </field>
    </record>

</odoo>
