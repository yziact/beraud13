<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="account.report_invoice_document">
            <t t-call="report.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page" style="font-size:11px;">
                    <div class="row">
                        <div class="col-xs-6" t-if="o.type=='out_invoice'">
                            <div t-if="o.type=='out_invoice' and o.partner_shipping_id">
                                <span><strong>Adresse de Livraison:</strong></span>
                            </div>
                            <div t-if="o.partner_shipping_id" name="partner_header">
                                <div t-field="o.partner_shipping_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                            </div>
                        </div>
                        <div class="col-xs-6">
                             <span><strong>Adresse de Facturation:</strong></span>
                            <address t-field="o.partner_id"
                                     t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                            <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                        </div>
                    </div>

                    <h2>
                        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice: </span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA: </span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice: </span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice: </span>
                        <span t-if="o.type == 'out_refund'">Refund: </span>
                        <span t-if="o.type == 'in_refund'">Vendor Refund: </span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill: </span>
                        <span t-field="o.number"/>
                    </h2>

                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr>
                                <td t-if="o.date_invoice">
                                    <strong>Date </strong>
                                </td>
                                <td t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                                    <strong>Due Date:</strong>
                                </td>
                                <!--td>
                                    <strong>Numero </strong>
                                </td-->
                                <td>
                                    <strong>Code client</strong>
                                </td>
                                <td name="partner_ref_head">
                                    <strong>V/Ref.</strong>
                                </td>
                                <td t-if="o.incoterms_id">
                                    <strong>Incoterms:</strong>
                                </td>
                                <td t-if="o.partner_id.user_id">
                                    <span><span>
                                        <strong>Commercial: </strong>
                                    </span><span t-field="o.partner_id.user_id.name"/> / <span t-field="o.partner_id.user_id.email"/></span>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-if="o.date_invoice">
                                    <p t-field="o.date_invoice"  t-field-options='{"format":"dd/MM/y"}'/>
                                </td>
                                <td t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                                    <p t-field="o.date_due"/>
                                </td>
                                <!--td>
                                    <span t-field="o.number"/>
                                </td-->
                                <td>
                                    <span t-field="o.partner_id.ref"/>
                                </td>
                                <td name="partner_ref_data">
                                    <span t-field="o.name"/>
                                </td>
                                <td  t-if="o.incoterms_id">
                                    <p t-field="o.incoterms_id.code"/>
                                </td>
                                <td>
                                    <table>
                                        <tbody>
                                            <tr t-if="o.partner_id.principal_contact">
                                                <td>
                                                    <strong>Contact: </strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.partner_id.principal_contact.name"/>
                                                    / <span t-field="o.partner_id.principal_contact.email"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>V/Contact: </strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.create_uid.partner_id.name"/> /
                                                    <span t-field="o.create_uid.email"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Unit Price</th>
                                <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                                <th class="text-right">Taxes</th>
                                <th class="text-right">Price</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td><span t-field="l.name"/></td>
                                <td class="text-right">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uom_id"  groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal"
                                          t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                    <tr>
                                        <td><span t-esc="amount_by_group[0]"/></td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row" t-if="o.tax_line_ids">
                        <div class="col-xs-6">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Tax</th>
                                        <th class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.tax_line_ids" t-as="t">
                                        <td><span t-field="t.name"/></td>
                                        <td class="text-right">
                                            <span t-field="t.amount"
                                                  t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <p t-if="o.comment">
                        <strong>Comment:</strong>
                        <span t-field="o.comment"/>
                    </p>
                    <p t-if="o.payment_term_id">
                        <span t-field="o.payment_term_id.note"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                </div>
            </t>
        </template>
    </data>
</openerp>
