<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="account.report_invoice_document">
            <t t-call="report.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page" style="font-size:11px;">
                    <div class="row">
                        <br/>
                        <div class="col-xs-6">
                            <div t-if="(o.type=='out_invoice' or o.type=='out_refund') and o.partner_shipping_id">
                                <span><strong>Adresse de Livraison:</strong></span>
                            </div>
                            <div t-if="o.partner_shipping_id" name="partner_header">
                                <div t-field="o.partner_shipping_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <span><strong>Adresse de Facturation:</strong></span>
                            <address t-field="o.partner_id"
                                     t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                            <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                        </div>
                    </div>

                    <h2>
                        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice </span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>

                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice </span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice </span>
                        <span t-if="o.type == 'out_refund'">Refund </span>
                        <span t-if="o.type == 'in_refund'">Vendor Refund </span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill </span>
                        <span t-if="not o.state in ['draft']" >N°</span>
                        <span t-field="o.number"/>
                        <t t-if="o.type == 'out_invoice' and o.state == 'proforma2'">
                            <span  t-field="o.proforma_number"/>
                        </t>
                    </h2>

                    <h6>
                        <div>
                            <span id="contact" t-if="o.contact">
                                <strong>A l'attention de : </strong>
                                <span t-field="o.contact.title.shortcut"/>
                                <span t-field="o.contact.name"/>
                                /
                                <span t-field="o.contact.email"/>
                            </span>
                        </div>
                        <!-- <div>
                             <span id="vcontact">
                                 <strong>V/Contact: </strong>
                                 <span t-field="o.create_uid.name"/>
                                 /
                                 <span t-field="o.create_uid.email"/>
                             </span>

                         </div>-->
                        <div>
                            <span id="Code_client"><strong>Ref. Client : </strong></span><span t-field="o.account_id.code"/>
                        </div>
                    </h6>

                    <table id="cart"  class="table table-condensed table-bordered">
                        <style>
                            #cart {
                            border:1px solid black;
                            border-spacing: 0.5rem;
                            border-collapse: collapse;
                            margin-bottom: 20px;
                            //background-color: red;
                            }
                            #cart td {
                            border:1px solid black;
                            padding-top: 5px;
                            padding-right: 5px;
                            padding-left: 5px;
                            }
                            #cart th {
                            padding: 5px;
                            border:1px solid black;
                            background-color: #bebebe;
                            }
                            #cart table th { border: none; }
                            #cart table td { border: none; }
                        </style>
                        <thead>
                            <tr>
                                <th>
                                    <strong>Date</strong>
                                </th>
                                <th t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                                    <strong>Due Date</strong>
                                </th>
                                <th name="partner_ref_head">
                                    <strong>V/Ref.</strong>
                                </th>
                                <th>
                                    <strong>Incoterms</strong>
                                </th>
                                <th>
                                    <span>
                                        <t t-if="o.company_id.id == 3">
                                            <strong>Commercial : </strong>
                                        </t>
                                        <t t-if="o.team_id.id == 1">
                                            <strong>Commercial Machine : </strong>
                                        </t>
                                        <t t-if="o.team_id.id in [2,10,9]">
                                            <strong>Commercial Pièces : </strong>
                                        </t>
                                        <t t-if="o.user_id">
                                            <span t-field="o.user_id.name"/>
                                            /
                                            <span t-field="o.user_id.email"/>
                                        </t>
                                        <t t-if="(not o.user_id) and o.partner_id.user_id">
                                            <span t-field="o.partner_id.user_id.name"/>
                                            /
                                            <span t-field="o.partner_id.user_id.email"/>
                                        </t>
                                        <t t-if="not (o.user_id and o.partner_id.user_id)">
                                            <span t-field="o.partner_id.parent_id.user_id.name"/>
                                            /
                                            <span t-field="o.partner_id.parent_id.user_id.email"/>
                                        </t>
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <t t-if="o.date_invoice and o.state != 'proforma2'">
                                        <p t-field="o.date_invoice" t-field-options='{"format":"dd/MM/y"}'/>
                                    </t>
                                    <t t-if="o.type == 'out_invoice' and o.state == 'proforma2'" >
                                        <p t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                                    </t>
                                </td>
                                <td t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')" >
                                    <p t-field="o.date_due"/>
                                </td>
                                <td name="partner_ref_data" t-if="o.type in ['out_invoice','out_refund']">
                                    <span t-field="o.name"/>
                                </td>
                                <td name="partner_ref_data" t-if="o.type in ['in_invoice','in_refund']">
                                    <span t-field="o.reference"/>
                                </td>
                                <td>
                                    <p t-field="o.incoterms_id.code"/>
                                </td>
                                <td>
                                    <span>
                                        <strong>V/contact affaire : </strong>
                                        <t t-if="o.contact_affaire">
                                            <span t-field="o.contact_affaire.name"/>
                                            /
                                            <span t-field="o.contact_affaire.email"/>
                                        </t>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div t-if="o.last_bl_from_bc">
                        <span>
                            <strong>Bon de Livraison : </strong>
                        </span>
                        <span t-field="o.last_bl_from_bc.name"/>
                        <span t-if="o.bl_date" t-field="o.bl_date"/>
                        <span>
                            <strong> Date : </strong>
                        </span>
                        <span t-if="not o.bl_date" t-field="o.last_bl_from_bc.date_done" t-field-options='{"format":"dd/MM/y"}'/>
                    </div>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th t-if="o.origin == 'Internal'">Date Mouvement</th>
                                <th>Description</th>
                                <th t-if="o.origin == 'Internal'">N°BL</th>
                                <th t-if="o.origin == 'Internal'">Date BL/OR</th>
                                <th t-if="o.origin == 'Internal'">N°série</th>
                                <th class="text-right">Qté</th>
                                <th class="text-right">PU HT</th>
                                <th t-if="display_discount" class="text-right">Disc.(%)</th>
                                <th class="text-right">TVA</th>
                                <th class="text-right">Price</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td t-if="o.origin == 'Internal'">
                                    <span t-field="l.date_move" t-field-options='{"format":"dd/MM/y"}'/>
                                </td>
                                <td class="col-xs-5">
                                    <span t-field="l.name"/>
                                </td>
                                <td t-if="o.origin == 'Internal'">
                                    <span t-field="l.num_bl"/>
                                </td>
                                <td t-if="o.origin == 'Internal'">
                                    <span t-field="l.date_bl" t-field-options='{"format":"dd/MM/y"}'/>
                                </td>
                                <td t-if="o.origin == 'Internal'">
                                    <span t-field="l.serial"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uom_id"  groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal"
                                          t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total HT</strong></td>
                                    <td class="text-right">
                                        <span t-esc="'%.2f'%(o.amount_untaxed)" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                    <tr>
                                        <td><span >TVA</span><!--<span t-esc="amount_by_group[0]"/>--></td>
                                        <td class="text-right">
                                            <span t-esc="'%.2f'%(o.amount_tax)" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                        </td>
                                    </tr>
                                </t>
                                <tr class="border-black">
                                    <td><strong>Total TTC</strong></td>
                                    <td class="text-right">
                                        <spant t-esc="'%.2f'%(o.amount_total)" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row" t-if="o.tax_line_ids">
                        <div class="col-xs-6">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Tax</th>
                                        <th class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.tax_line_ids" t-as="t">
                                        <td>
                                            <t t-if="t.tax_id.description">
                                                <span t-field="t.tax_id.description"/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="t.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="'%.2f'%(t.amount)"
                                                  t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <p t-if="o.comment">
                        <strong>Comment:</strong>
                        <span t-field="o.comment"/>
                    </p>
                    <p>
                        <div t-if="o.payment_term_id">
                            <strong>Conditions de réglement</strong>
                            <span t-field="o.payment_term_id.note"/>
                        </div>
                        <div t-if="o.fiscal_position_id.note">
                            <strong>Fiscal Position Remark:</strong>
                            <span t-field="o.fiscal_position_id.note"/>
                        </div>
                    </p>
                </div>
            </t>
        </template>
    </data>
</openerp>
