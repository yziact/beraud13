<odoo>
    <record id="view_order_form_beraud" model="ir.ui.view">
        <field name="name">Purchase Order Beraud</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

	     <xpath expr="//tree[@editable='bottom']" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//tree/field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='print_quotation']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="contact" domain="[('parent_id', '=', partner_id)]"/>
            </xpath>

            <xpath expr="//field[@name='company_id']" position="after">
                <field name="user_id" string="Commercial"/>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="after">
                <field name="contact_affaire" string="V/Contact affaire"/>
            </xpath>

        </field>
    </record>
</odoo>

