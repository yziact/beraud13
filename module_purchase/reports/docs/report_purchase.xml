<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_mypurchaseorder">
            <t t-name="report_mypurchaseorder">
                <t t-call="report.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="report.external_layout">
                            <div class="page" style="font-size:11px;">
                                <div class="oe_structure"/>
                                <div class="row">
                                    <br/>
                                    <div class="col-xs-6">
                                        <strong>Adresse de Livraison et de Facturation</strong>
                                        <div t-if="o.dest_address_id">
                                            <div t-field="o.dest_address_id"
                                                 t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true, "phone_icons": true}'/>
                                        </div>

                                        <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                                 t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": true, "phone_icons": true}'/>
                                        </div>
                                    </div>
                                    <div class="col-xs-5 col-xs-offset-1">
                                        <!--<strong>Adresse de Facturation</strong>-->
                                        <div t-field="o.partner_id"
                                             t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true, "phone_icons": true}'/>
                                        <p t-if="o.partner_id.vat">TVA<span t-field="o.partner_id.vat"/></p>
                                    </div>
                                </div>

                                <!-- <h3 t-if="o.state != 'draft'">Purchase Order Confirmation</h3>
                        <h3 t-if="o.state == 'draft'">Request for Quotation</h3> -->

                                <h3 t-if="o.state == 'draft'">Demande de Prix #<span t-field="o.name" /></h3>
                                <h3 t-if="o.state != 'draft'">Bon de Commande #<span t-field="o.name" /></h3>

                                <h6 t-if="o.partner_ref">
                                    <div>
                                        <span t-if="o.contact"><strong>A l'attention de :</strong> <span t-field="o.contact.title.shortcut"/> <span t-field="o.contact.name"/> / <span t-field="o.contact.email"/> </span>
                                    </div>
                                    <strong>Ref. Fournisseur : </strong>
                                    <span t-field="o.partner_id.property_account_payable_id.code"/>
                                </h6>

                                <table id="cart" class="table table-condensed table-bordered">
                                    <style>
                                        #cart {
                                        border:1px solid black;
                                        border-spacing: 0.5rem;
                                        border-collapse: collapse;
                                        margin-bottom: 20px;
                                        //background-color: red;
                                        }
                                        #cart td {
                                        border:1px solid black;
                                        padding-top: 5px;
                                        padding-right: 5px;
                                        padding-left: 5px;
                                        }
                                        #cart th {
                                        padding: 5px;
                                        border:1px solid black;
                                        background-color: #bebebe;
                                        }
                                        #cart table th { border: none; }
                                        #cart table td { border: none; }
                                    </style>
                                    <thead>
                                        <tr>
                                            <!--<td t-if="o.name">
                                                &lt;!&ndash; <strong>Our Order Reference:</strong> &ndash;&gt;
                                                <strong>Référence de la Commande</strong>
                                            </td>
                                            <td t-if="o.partner_ref">
                                                &lt;!&ndash; <strong>Your Order Reference</strong> &ndash;&gt;
                                                <strong>Référence de la Commande</strong>
                                            </td>-->
                                            <th>
                                                <!-- <strong>Order Date</strong> -->
                                                <strong>Date</strong>
                                            </th>
                                            <th>
                                                <strong>V/Ref.</strong>
                                            </th>
                                            <th>
                                                <strong>Incoterm</strong>
                                            </th>
                                            <th>
                                                <span>
                                                    <strong>Commercial : </strong>
                                                    <t t-if="o.user_id">
                                                        <span t-field="o.user_id.name"/>
                                                        /
                                                        <span t-field="o.user_id.email"/>
                                                    </t>
                                                    <t t-if="(not o.user_id) and o.partner_id.user_id">
                                                        <span t-field="o.partner_id.user_id.name"/>
                                                        /
                                                        <span t-field="o.partner_id.user_id.email"/>
                                                    </t>
                                                    <t t-if="not (o.user_id and o.partner_id.user_id)">
                                                        <span t-field="o.partner_id.parent_id.user_id.name"/>
                                                        /
                                                        <span t-field="o.partner_id.parent_id.user_id.email"/>
                                                    </t>
                                                </span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <!--  <td t-if="o.name">
                                                  <p t-field="o.name"/>
                                              </td>
                                              <td t-if="o.partner_ref">
                                                  <p t-field="o.partner_ref"/>
                                              </td>-->
                                            <td>
                                                <span t-field="o.date_order" t-field-options='{"format":"dd/MM/y"}'/>
                                            </td>
                                            <td>
                                                <span t-field="o.partner_ref"/>
                                            </td>
                                            <td>
                                                <span t-field="o.incoterm_id.code"/>
                                            </td>
                                            <td>
                                                <span>
                                                    <strong>V/contact affaire : </strong>
                                                    <t t-if="o.contact_affaire">
                                                        <span t-field="o.contact_affaire.name"/>
                                                        /
                                                        <span t-field="o.contact_affaire.email"/>
                                                    </t>
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th><strong>Description</strong></th>
                                            <th class="text-center"><strong>Date Req.</strong></th>
                                            <!-- <th class="text-right"><strong>Qty</strong></th> -->
                                            <th class="text-right"><strong>Quantité</strong></th>
                                            <!-- <th class="text-right"><strong>Unit Price</strong></th> -->
                                            <th class="text-right"><strong>Prix Unitaire</strong></th>
                                            <th><strong>Taxes</strong></th>
                                            <!-- <th class="text-right"><strong>Net Price</strong></th> -->
                                            <th class="text-right"><strong>Prix Net</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.order_line" t-as="line">
                                            <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.date_planned" t-field-options='{"format":"dd/MM/y"}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_qty"/>
                                                <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td>
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.taxes_id))"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal"
                                                      t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <div class="row">
                                    <div class="col-xs-4 pull-right">
                                        <table class="table table-condensed">
                                            <tr class="border-black">
                                                <!-- <td><strong>Total Without Taxes</strong></td> -->
                                                <td><strong>Total HT</strong></td>
                                                <td class="text-right">
                                                    <span t-field="o.amount_untaxed"
                                                          t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>TVA</td>
                                                <td class="text-right">
                                                    <span t-field="o.amount_tax"
                                                          t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                </td>
                                            </tr>
                                            <tr class="border-black">
                                                <td><strong>Total TTC</strong></td>
                                                <td class="text-right">
                                                    <span t-field="o.amount_total"
                                                          t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>

                                <p t-field="o.notes"/>
                                <div class="oe_structure"/>
                            </div>
                        </t>
                    </t> <!-- end of t-foreach -->
                </t>
            </t>
        </template> <!-- end of purchase report -->

        <!-- <template id="report_purchasemyorder_document">
            <template id="report_purchasemyorder">
              <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                  <t t-call="module_purchase.report_purchasemyorder_document" t-lang="doc.partner_id.lang"/>
                </t>
              </t>
            </template>  -->

    </data>
</openerp>


