<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_background_company_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="background_color"/>
                <field name="border_color"/>
            </xpath>
        </field>
    </record>

    <!-- theme CSS -->
    <template id="assets_common" inherit_id="web.assets_common"
              name="Theme CSS" priority="1">
        <xpath expr="//link[@href='/web/static/src/less/variables.less']" position="after">
           <link rel="stylesheet" href="https://odoo.beraud-sas.fr/beraud/static/src/less/variables.less"/>
            <!--<link rel="stylesheet" href="http://54.36.142.229:8069/beraud/static/src/less/variables.less"/>-->

        </xpath>
    </template>

    <template id="assets_backend" inherit_id="web.assets_backend"
              name="Theme CSS" priority="1">
        <xpath expr="//link[@href='/web/static/src/less/variables.less']" position="after">
            <link rel="stylesheet" href="https://odoo.beraud-sas.fr/beraud/static/src/less/variables.less"/> 
            <!--<link rel="stylesheet" href="http://54.36.142.229:8069/beraud/static/src/less/variables.less"/>-->
        </xpath>
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="https://odoo.beraud-sas.fr/beraud/dynamic_backend.css"/> 
           <!-- <link rel="stylesheet" href="http://54.36.142.229:8069/beraud/dynamic_backend.css"/> -->
        </xpath>
    </template>

  </data>
</openerp>

