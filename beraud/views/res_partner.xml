<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_partner_form">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="attrs">{'required': True}</attribute>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <group>
                        <field name="is_principal" attrs="{'invisible':[('is_company','=', True)]}"
                               string="Contact principal"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='image']" position="after">
                    <label for="exported" string=" " class="fa fa-asterisk fa-3x" style="font-size:20px;" attrs="{'invisible': [('exported','=',True)]}"/>
                    <field name="exported"  attrs="{'invisible': True}"/>
                    <!--div class="fa fa-exclamation-triangle fa-2x" style="color:#ff4d00;"  attrs="{'invisible': True}" /-->
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_partner_kanban">
            <field name="name">res.partner.kanban.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
               <xpath expr="//div[@class='o_kanban_image']" position="before">
                   <div>
                       <label for="exported" string=" " class="fa fa-asterisk fa-3x" style="font-size:15px; float: right;" attrs="{'invisible': [('exported','=',True)]}"/>
                       <field name="exported" attrs="{'invisible':True}"/>
                   </div>
               </xpath>
            </field>
        </record>

    </data>
</openerp>
