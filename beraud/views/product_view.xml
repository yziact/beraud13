<openerp>
    <data>
        <record id="product_template_inherit_form_view" model="ir.ui.view">
            <field name="name">product.template.inherit.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="90"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='recurring_invoice']" position="after">
                    <field name="code_douane"/>
                </xpath>
                <xpath expr="//field[@name='property_stock_inventory']" position="after">
                    <field name="casier"/>
                </xpath>
                <xpath expr="//field[@name='property_stock_inventory']" position="after">
                    <field name="allee"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

