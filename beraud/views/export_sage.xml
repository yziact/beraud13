<openerp>
    <data>
        <record id="export_sage"  model="ir.ui.view">
            <field name="name">Exportation des Journaux vers Comptabilité</field>
            <field name="model">export.ecriture_sage</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group name="date">
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                        </group>
                        <group>
                            <field name="test"/>
                        </group>
                    </group>
                    <group name="buttons">
                        <group name="ber">
                            <button  name="action_ber_vente" string="Export des ventes de Beraud" type="object" class="btn btn-success" icon="fa-download" attrs="{'invisible': ['|',('date_fin','=',False),('date_debut','=',False)]}"/>
                            <button  name="action_ber_achat" string="Export des achats de Beraud" type="object" class="btn-success" icon="fa-download" attrs="{'invisible': ['|',('date_fin','=',False),('date_debut','=',False)]}"/>
                        </group>
                        <group name="atm">
                            <button  name="action_atm_vente" string="Export des ventes de Atom" type="object" class="btn-success" icon="fa-download" attrs="{'invisible': ['|',('date_fin','=',False),('date_debut','=',False)]}"/>
                            <button  name="action_atm_achat" string="Export des achats de Atom" type="object" class="btn-success" icon="fa-download" attrs="{'invisible': ['|',('date_fin','=',False),('date_debut','=',False)]}"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_wizard_export_sage" model="ir.actions.act_window">
            <field name="name">Exportation des Journaux vers Comptabilité</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export.ecriture_sage</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="export_sage"/>
            <field name="target">new</field>
        </record>

        <act_window id="act_wizard_export_sage"
                    name="Perform export"
                    res_model="export.ecriture_sage"
                    src_model="export.ecriture_sage"
                    view_id="export_sage"
                    target="new"
        />
        <!--parent="base.menu_accouting_root"-->
        <menuitem name="Exports Comptables" id="menu_export_root" parent="account.menu_finance"/>
        <menuitem name="Export des Journaux vers Comptabilité Sage" id="menu_export_sage" action="action_wizard_export_sage" parent="menu_export_root"/>
    </data>
</openerp>
