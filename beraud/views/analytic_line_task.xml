                </xpath>
                <xpath expr="//tree/field[@name='user_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('billed','=', True)]}</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='name']" position="attributes">
                    <attribute name="attrs">{'readonly': [('billed','=', True)]}</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='account_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('billed','=', True)]}</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='unit_amount']" position="attributes">
                    <attribute name="attrs">{'readonly': [('billed','=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>