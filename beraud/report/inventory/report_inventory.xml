<odoo>
    <template id="inventory_inherit" inherit_id="stock.report_inventory">
        <xpath expr="//span[@t-field='line.location_id']" position="after">
            <span> </span><span t-field="line.product_id.emplacement"/>
        </xpath>

        <!--<xpath expr="//table[@class='table table-condensed']/thead/tr/th[@class='text-right']" position="after">
            <th><strong>Co没t</strong></th>
            <th><strong>Co没t Global</strong></th>
        </xpath>

        <xpath expr="//table[@class='table table-condensed']/tr[@t-foreach='o.line_ids']/td[@class='text-right']" position="after">
            <td>
                <span  t-field="line.cout"/>
            </td>
            <td>
                <span t-field="line.cout_global"/>
            </td>
        </xpath>
-->
        <xpath expr="(//table[@class='table table-condensed'])[2]" position="replace">
            <table class="table table-condensed" style="font-size:11px;">
                <thead>
                    <tr>
                        <th style="width:10%;">
                            <strong>Location</strong>
                        </th>
                        <th style="width:30%;">
                            <strong>Product</strong>
                        </th>
                        <th style="width:10%;">
                            <strong>Production Lot</strong>
                        </th>
                        <!--<th><strong>Package</strong></th>-->
                        <th class="text-right" style="max-width:10%;">
                            <strong>Quantity</strong>
                        </th>
                        <th class="text-right">
                            <strong>Co没t</strong>
                        </th>
                        <th class="text-right">
                            <strong>Co没t Global</strong>
                        </th>
                    </tr>
                </thead>
                <tr t-foreach="o.line_ids" t-as="line">
                    <td style="width:20%;">
                        <span t-field="line.location_id"/> <span t-field="line.product_id.emplacement"/>
                    </td>
                    <td style="width:40%;">
                        <span t-field="line.product_id"/>
                    </td>
                    <td style="width:10%;">
                        <span t-field="line.prod_lot_id"/>
                    </td>
                    <!--<td><span t-field="line.package_id"/></td>-->
                    <td class="text-right" style="width:10%;">
                        <span t-field="line.product_qty"/>
                    </td>
                    <td class="text-right" style="width:10%;">
                        <span  t-field="line.cout"/>
                    </td>
                    <td class="text-right" style="width:10%;">
                        <span t-field="line.cout_global"/>
                    </td>
                </tr>
                <tr>
                    <td></td>
                </tr>
            </table>
            <div class="col-xs-4 pull-right">
                <table class="table table-condensed">
                    <tr class="border-black">
                        <td><strong>Total</strong></td>
                        <td class="text-right">
                            <span t-field="o.total"/>
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
    </template>
</odoo>
