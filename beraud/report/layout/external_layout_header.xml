<openerp>
    <data>
        <template id="report.external_layout_header">
            <t t-name="report.external_layout_header">
                <div class="header" style="font-size:11px;">
                    <div class="row">
                        <div t-if="company.id == 3">
                            <div class="col-xs-6">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                     style="width:auto; max-height:75px;" />
                                <div class="text-left" style="margin-top:20px;" t-field="company.rml_header1"/>
                            </div>
                        </div>
                        <div t-if="company.id == 1">
                            <div class="col-xs-6">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                     style="width:auto; max-height:120px;"/>
                                <div class="text-left" style="margin-top:20px;" t-field="company.rml_header1"/>
                            </div>
                        </div>
                        <div class="col-xs-6" name="company_address">
                            <div class="col-xs-6" t-field="company.partner_id"
                                 t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'
                                 />
                            <div class="col-xs-6" t-field="company.partner_id"
                                 t-field-options='{"widget": "contact", "fields": ["phone", "fax", "email","website"], "no_marker": true, "phone_icons": true}'/>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
