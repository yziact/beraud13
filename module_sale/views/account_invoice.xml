<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.fom</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Bons de livraison">
                        <field name="bl_line_ids" widget="one2many_list" mode="tree">
                            <tree editable="bottom">
                                <field name="invoice_id" readonly="1" invisible="1"/>
                                <field name="bl_id" attrs="{'readonly':[('invoice_id','!=',False)]}"/>
                                <field name="to_print"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</openerp>