<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="report_invoice_document" inherit_id="account.report_invoice_document">

            <xpath expr="//table[2]" position="replace">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th t-if="o.origin == 'Internal'">Date Mouvement</th>
                            <th>Description</th>
                            <th t-if="o.origin == 'Internal'">N°série</th>
                            <th class="text-right">Qté</th>
                            <th class="text-right">PU HT</th>
                            <th t-if="display_discount" class="text-right">Disc.(%)</th>
                            <th class="text-right">TVA</th>
                            <th class="text-right">Price</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-foreach="o.get_lines_by_remi()" t-as="deliveryGroup">
                            <!--Livraison-->
                            <!--<tr colspan="2">-->
                                <!--<strong>-->
                                    <!--<h4>-->
                                        <span t-esc="deliveryGroup[0].name"/>
                                         <!-- - -->
                                        <!--<span t-esc="deliveryGroup[0].date" t-field-options="{&quot;format&quot;:&quot;dd/MM/y&quot;}"/>-->
                                    <!--</h4>-->
                                    <!--<span t-esc="deliveryGroup[0].name" />-->
                                <!--</strong>-->
                            <!--</tr>-->
                            <tr t-foreach="deliveryGroup[1]" t-as="itemLine">
                                <!--Date Mouvement-->
                                <td t-if="o.origin == 'Internal'">
                                    <span t-esc="deliveryGroup[0].date_move" t-esc-options="{&quot;format&quot;:&quot;dd/MM/y&quot;}"/>
                                </td>
                                <!--Description-->
                                <td class="col-4">
                                        <span t-esc="itemLine['product'].name"/>
                                </td>
                                <!--N°série-->
                                <!--<td>-->
                                    <!--<span t-esc="itemLine['xxxx'].xxxx"/>-->
                                <!--</td>-->
                                <!--Qté-->
                                <td class="col-2">
                                        <span t-esc="itemLine['qty']"/>
                                        <span t-esc="itemLine['uom'].name"/>
                                </td>
                                <!--PU HT-->
                                <td>
                                    <span t-esc="itemLine['invoice_line'].price_unit"/>
                                </td>
                                <!--Disc.(%)-->
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-esc="itemLine['invoice_line'].discount"/>
                                </td>
                                <!--TVA-->
                                <td class="text-right">
                                    <!--<span t-esc="itemLine['xxxx'].xxxx"/>-->
                                </td>
                                <!--Price-->
                                <td class="text-right">
                                        <span t-esc="itemLine['invoice_line'].price_unit * itemLine['qty']"/>
                                         <!--* (1 + itemLine['invoice_line'].discount)-->
                                              <!--t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"-->
                                    <!--<span t-field="l[0].price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>-->
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </xpath>

            <xpath expr="//div[@t-if='o.last_bl_from_bc']" position="replace">
            </xpath>
        </template>

    </data>
</openerp>