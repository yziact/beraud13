<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_mysaleorder">
            <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="font-size:12px;">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-xs-3">
                                <span><strong>Adresse de livraison</strong></span>
                                <div>
                                    <span t-field="doc.partner_shipping_id.name"/>
                                    <span t-field="doc.partner_shipping_id"
                                          t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": true, "phone_icons": true}' />
                                </div>
                            </div>
                            <div class="col-xs-3 col-xs-offset-3">
                                <span><strong>Adresse de facturation</strong></span>
                                <div t-field="doc.partner_invoice_id"
                                     t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true, "phone_icons": true}' />
                            </div>
                        </div>
                        <h3>
                            <span t-if="doc.state not in ['draft','sent']">Confirmation de Commande # </span>
                            <span t-if="doc.state in ['draft','sent']">Devis # </span>
                            <span t-field="doc.name"/>
                        </h3>
                        <h6>
                            <div>
                                <span t-if="doc.contact"><strong>A l'attention de :</strong> <span t-field="doc.contact.title.shortcut"/> <span t-field="doc.contact.name"/> / <span t-field="doc.contact.email"/> </span>
                            </div>
                            <strong>Ref. Client : </strong>
                            <span t-field="doc.partner_id.ref"/>
                        </h6>

                        <!--<table class="table table-condensed table-bordered">-->
                        <!--<table class="table table-condensed">-->
                        <table id="cart">
                            <!-- putting the style inside the table so its easier fetched from the
                                 code that duplicates the cart to other pages -->
                            <style>
                                #cart {
                                border:1px solid black;
                                border-spacing: 0.5rem;
                                border-collapse: collapse;
                                margin-bottom: 20px;
                                //background-color: red;
                                }
                                #cart td {
                                border:1px solid black;
                                padding-top: 5px;
                                padding-right: 5px;
                                padding-left: 5px;
                                }
                                #cart th {
                                padding: 5px;
                                border:1px solid black;
                                background-color: #bebebe;
                                }
                                #cart table th { border: none; }
                                #cart table td { border: none; }
                            </style>
                            <thead>
                                <tr>
                                    <th t-if="doc.date_order">
                                        <strong>Date</strong>
                                    </th>
                                    <th>
                                        <strong>Numero</strong>
                                    </th>
                                    <th name="ref_client_head" t-if="doc.client_order_ref" class="col-xs-3">
                                        <strong>V/Ref.</strong>
                                    </th>
                                    <th t-if="doc.incoterm">
                                        <strong>Incoterms:</strong>
                                    </th>
                                    <th t-if="doc.partner_id.user_id">
                                        <span><span><strong>Resp. commercial : </strong></span><span t-field="doc.partner_id.user_id.name"/> / <span t-field="doc.partner_id.user_id.email"/></span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-if="doc.date_order">
                                        <p t-field="doc.date_order"  t-field-options='{"format":"dd/MM/y"}'/>
                                    </td>
                                    <td>
                                        <span t-field="doc.name"/>
                                    </td>
                                    <!--
                                    <td>
                                        <span t-field="doc.partner_id.ref"/>
                                    </td>
                                    -->
                                    <td name="ref_client_data" t-if="doc.client_order_ref">
                                        <p t-field="doc.client_order_ref"/>
                                    </td>
                                    <td  t-if="doc.incoterm">
                                        <p t-field="doc.incoterm.code"/>
                                    </td>
                                    <td>
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <strong>Votre contact : </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="doc.commercial.name"/>
                                                        <span t-field="doc.commercial.email"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                        <table class="table table-condensed" style="page-break-inside:auto">
                            <thead>
                                <tr>
                                    <th></th> <!-- placeholder for image -->
                                    <th>Description</th>
                                    <th class="text-right">Qt√©</th>
                                    <th class="text-right">PU HT</th>
                                    <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Rem.</th>
                                    <th class="text-right">Montant</th>
                                    <th class="text-right">TVA</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody" style="page-break-inside:auto; font-size:13px;">
                                <t t-foreach="doc.order_line" t-as="l" style="page-break-inside:auto">
                                    <tr t-if="l.product_uom_qty">
                                        <td class="col-xs-1">
                                            <img t-if="l.product_id.image_small"
                                                 t-att-src="'data:image/png;base64,%s' % l.product_id.image_small"
                                                 class="img-responsive"/>
                                        </td>
                                        <td class="col-xs-6">
                                            <span t-field="l.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.product_uom_qty"/>
                                            <span groups="product.group_uom" t-field="l.product_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_subtotal"
                                                  t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td><strong>Total HT</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_untaxed"
                                                  t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>TVA</td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_tax"
                                                  t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_total"
                                                  t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <p t-field="doc.note" />
                         <p t-if="doc.payment_term_id.note">
                             <span t-field="doc.payment_term_id.note"/>
                         </p>
                         <!--<p t-if="not doc.payment_term_id and doc.partner_id.property_payment_term_id">
                             <span t-field="doc.partner_id.property_payment_term_id.note"/>
                         </p>-->
                        <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                            <strong>Position fiscale</strong>
                            <span t-field="doc.fiscal_position_id.note"/>
                        </p>
                        <div class="oe_structure"/>
                        <div style="bottom:0px">
                            <table class="table table-condensed table-bordered" style="page-break-inside:avoid; ">
                                <thead>
                                    <th>
                                        <span>D√©lai</span>
                                    </th>
                                    <th>
                                        <strong>Numero</strong>
                                    </th>
                                    <th>
                                        <span>Formation</span>
                                    </th>
                                    <th>
                                        <span>Modalit√©s de r√©glement</span>
                                    </th>
                                </thead>
                                <tbody>
                                    <td>
                                        <span t-field="doc.delay"/>
                                    </td>
                                    <td>
                                        <span t-if="doc.install">Installation incluse</span>
                                        <span t-if="not doc.install">Installation non incluse</span>
                                    </td>
                                    <td>
                                        <span t-if="doc.tuto">Formation incluse</span>
                                        <span t-if="not doc.tuto">Formation non incluse</span>
                                    </td>
                                    <td>
                                        <span t-field="doc.reglement"/>
                                    </td>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>


