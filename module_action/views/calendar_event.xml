<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="action_crm_calendar_event_inherit" model="ir.ui.view">
        <field name="name">Action calendar popup </field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="inside">
                <button string="RÃ©diger compte-rendu" class="oe_stat_button pull-right" icon="fa-bars" type="object" name="action_open_crm_action" attrs="{'invisible': [('action_id','=',False)]}"/>
            </xpath>

            <xpath expr="//div[@class='oe_title']" position="after">
                <group>
                    <field name="company_id"/>
                    <field name="contact_id"/>
                    <field name="action_id" groups="base.group_no_one"/>
                </group>
            </xpath>

        </field>
    </record>

