<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="partner_form_action_com" model="ir.ui.view">
        <field name="name">Clients Actions Commerciales</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button o_res_partner_tipp_opp" type="object" icon="fa-clock-o"  name="action_view_action">

                    <label for="action_count_active" string="Actions" attrs="{'invisible':[('company_type','=', 'person')]}"/>
                    <span  class="o_stat_value" attrs="{'invisible':[('company_type','=', 'person')]}">
                        <field name="action_count_active" widget="integer"/>
                        (<field name="action_count" widget="integer"/>)
                    </span>

                    <label for="contact_action_count_active" string="Actions" attrs="{'invisible':[('company_type','=', 'company')]}"/>
                    <span  class="o_stat_value" attrs="{'invisible':[('company_type','=', 'company')]}">
                        <field name="contact_action_count_active" widget="integer"/>
                        (<field name="contact_action_count" widget="integer"/>)
                    </span>

                </button>
            </xpath>

            <xpath expr="//field[@name='category_id']" position="after">
                <field name="last_action" attrs="{'invisible':[('company_type','=', 'person')]}"/>
            </xpath>
            
        </field>
    </record>

    <record id="partner_form_action_com_crm" model="ir.ui.view">
        <field name="name">Clients Actions Commerciales</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="crm.view_partners_form_crm1"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='schedule_meeting']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

        </field>
    </record>

</odoo>
