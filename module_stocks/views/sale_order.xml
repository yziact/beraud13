<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- sale order form view -->
    <record model="ir.ui.view" id="my_sale_order_form_view_date_done_inherited">
      <field name="name">My Stock Picking Form View Inherited</field>
      <field name="model">sale.order</field>
      <field name="inherit_id"
             ref="sale_order_dates.view_order_form_inherit_sale_stock_inherit_sale_order_dates"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='commitment_date']" position="after">
          <field name="picking_ids"/>
          <field name="last_picking_id"/>
          <field name="last_picking_id_date_done" widget="date"/>
        </xpath>
      </field>
    </record>

    <record id="our_order_tree_inherit_beraud" model="ir.ui.view">
      <field name="name">Sale Order Tree Beraud</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='state']" position="attributes">
          <attribute name="invisible">0</attribute>
        </xpath>
        <xpath expr="//field[@name='state']" position="after">
          <field name="last_picking_id_date_done" widget="date"/>
        </xpath>
      </field>
    </record>

  </data>
</openerp>

