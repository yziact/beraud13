<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- add tech field to stock location form view -->
        <record model="ir.ui.view" id="my_view_location_form_inherited">
            <field name="name">My Location View Inherited</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="tech"/>
                </field>
            </field>
        </record>

        <record id="product_template_tree_view" model="ir.ui.view">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="create_date"/>
                </field>
            </field>
        </record>

        <record id="my_stock_picking_view" model="ir.ui.view">
            <field name="name">My Stock Move Tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <tree position="inside">
                    <field name="stock_qty_ber_dispo"/>
                    <field name="stock_qty_ber_reserved"/>
                    <field name="stock_qty_atom_dispo"/>
                    <field name="stock_qty_atom_reserved"/>
                </tree>
            </field>
        </record>

        <!-- make the menu not be in the group noone -->
        <menuitem id="stock.menu_stock_warehouse_mgmt" name="Operations" parent="stock.menu_stock_root" sequence="2" groups="base.group_user"/>

        <!-- add date to stock picking form -->
        <record id="my_stock_picking_form_view" model="ir.ui.view">
            <field name="name">My Stock Picking Form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='min_date']" position="before">
                    <field name="date" />
                </xpath>
            </field>
        </record>


        <!-- works in point_of_sale_view
            <record id="product_template_tree_view" model="ir.ui.view">
                <field name="name">product.template.tree.inherit</field>
                <field name="model">product.template</field>
                <field name="inherit_id" ref="product.product_template_tree_view"/>
                <field name="arch" type="xml">
                    <field name="name" position="before">
                        <field name="sequence" widget="handle" />
                    </field>
                </field>
            </record> -->

        <record id="stock_logistique_tree_view" model="ir.ui.view">
            <field name="name">stock_logistique_tree_view</field>
            <field name="model">stock.view.logistique</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false">
                    <field name="company_id"/>
                    <field name="location_id"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="reserved_quantity"/>
                    <field name="quantity" sum="Total"/>
                </tree>
            </field>
        </record>

        <record id="stock_logistique_search_view" model="ir.ui.view">
            <field name="name">stock_logistique_search_view</field>
            <field name="model">stock.view.logistique</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="product_search">
                    <field name="company_id"/>
                    <field name="location_id"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <filter name="company" context="{'group_by':'company_id'}"/>
                </search>
            </field>
        </record>

        <record id="action_logistique_tree_view" model="ir.actions.act_window">
            <field name="name">Niveau des stocks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.view.logistique</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="stock_logistique_search_view"/>
            <field name="context">{'search_default_company':1}</field>
        </record>

        <record id="stock_inventory_inherit" model="ir.ui.view">
            <field name="name">Our inventory form view</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_title']" position="after">
                    <button name="action_compute_cout" string="Calculer les coÃ»ts" type="object" class="btn btn-info" groups="mybase.group_fix_me"/>
                </xpath>

                <xpath expr="//tree/field[@name='product_qty']" position="after">
                    <field name="cout"/>
                    <field name="cout_global"/>
                </xpath>

                <xpath expr="//field[@name='line_ids']" position="after">
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="inventory_total">
                        <field name="total" widget='monetary' string="Total"/>
                    </group>
                </xpath>
            </field>
        </record>

        <menuitem name="Niveau Stock" id="module_stocks.logistique" parent="stock.menu_stock_root"/>
        <menuitem name="Niveau Stock" id="logistique_level" parent="stock.menu_stock_inventory_control" action="module_stocks.action_logistique_tree_view"/>

    </data>
</openerp>


