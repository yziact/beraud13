<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    
    <!-- stock picking tree view -->
    <record model="ir.ui.view" id="my_stock_picking_tree_view_inherited">
      <field name="name">My Stock Picking Tree View Inherited</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.vpicktree"/>
      <field name="arch" type="xml">
        <field name="state" position="after">
          <field name="date_done"/>
        </field>
      </field>
    </record>

    <!-- stock picking form view -->
    <record model="ir.ui.view" id="my_stock_picking_form_view_inherited">
      <field name="name">My Stock Picking Form View Inherited</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <field name="origin" position="after">
          <field name="date_done"/>
        </field>
        <xpath expr="//field[@name='location_dest_id']" position="after">
          <field name="reliquat"/>
        </xpath>

        <xpath expr="//field[@name='move_lines']" position="attributes">
          <attribute name="attrs">{'invisible': [('state', 'not in', ('draft', 'confirmed', 'waiting','done'))]}</attribute>
        </xpath>

        <!-- HOTFIX ADD BUTTON RESERVE ON PARTIALLY AVAILALBLE - VRA 08/06/2020 -->
        <xpath expr="//button[@name='action_assign']" position="attributes">
          <attribute name="states">confirmed,waiting,partially_available</attribute>
        </xpath>
      </field>
    </record>

  </data>
</openerp>

