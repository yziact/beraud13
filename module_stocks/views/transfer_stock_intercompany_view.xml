        <record model="ir.ui.view" id="wizard_transfer_stock_intercompany_form_view">
            <field name="name">wizard.transfer.stock.intercompany.form</field>
            <field name="model">wizard.transfer.stock.intercompany</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4" colspan="4">
                        <group col="4" colspan="4" attrs="{'invisible': [('production_id', '=', False), ('picking_id', '=', False)]}">
                            <field name="production_id" options="{'no_open': true, 'no_create': true}" attrs="{'invisible': [('production_id','=', False)]}" readonly="1" />
                            <field name="picking_id" options="{'no_open': true, 'no_create': true}" attrs="{'invisible': [('picking_id','=', False)]}" readonly="1" />
                            <field name="update_data"/>
                            <field name="is_ok" invisible="1" />
                        </group>
                        <group col="2" colspan="2">
                            <separator string="Source" colspan="2"/>
                            <field name="company_src_id" options="{'no_open': true, 'no_create': true}" context="{'own_companies':True}"/>
                            <field name="location_src_id" options="{'no_open': true, 'no_create': true}"/>
                        </group>
                        <group col="2" colspan="2">
                            <separator string="Destination" colspan="2"/>
                            <field name="company_dst_id" options="{'no_open': true, 'no_create': true}" context="{'own_companies':True}"/>
                            <field name="location_dst_id" options="{'no_open': true, 'no_create': true}"/>
                        </group>
                        <separator string="Products to transfer" colspan="4"/>
                        <field name="line_ids" colspan="4" nolabel="1" >
                            <tree editable="top">
                                <field name="product_id" options="{'no_open': true, 'no_create': true}" />
                                <field name="quantity"/>
                                <field name="restrict_lot_id" domain="[('product_id', '=', product_id)]"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="perform_transfer" type="object"
                            string="Perform transfer" class="oe_highlight"
                            attrs="{'invisible': [('is_ok','=', False)]}"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

         <record id="action_wizard_transfer_stock_intercompany" model="ir.actions.act_window">
            <field name="name">Perform intercompany transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.transfer.stock.intercompany</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_transfer_stock_intercompany_form_view"/>
            <field name="target">new</field>
        </record>

        <act_window id="act_wizard_transfer_stock_intercompay_production"
            name="Perform intercompany transfer"
            res_model="wizard.transfer.stock.intercompany"
            src_model="mrp.production"
            view_id="wizard_transfer_stock_intercompany_form_view"
            target="new"
            />

        <act_window id="act_wizard_transfer_stock_intercompay_picking"
            name="Perform intercompany transfer"
            res_model="wizard.transfer.stock.intercompany"
            src_model="stock.picking"
            view_id="wizard_transfer_stock_intercompany_form_view"
            target="new"
            />

        <act_window id="act_wizard_transfer_stock_intercompay_quant"
            name="Perform intercompany transfer"
            res_model="wizard.transfer.stock.intercompany"
            src_model="stock.quant"
            view_id="wizard_transfer_stock_intercompany_form_view"
            target="new"
            />



        <menuitem name="Transfert de stock Inter-societe"
            id="menu_intercompany_stock_transfer"
            parent="stock.menu_stock_inventory_control"
            action="action_wizard_transfer_stock_intercompany"
            sequence="900"/>

    </data>
