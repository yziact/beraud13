    <record model="ir.rule" id="ir_values_my_stock_location_rule">
      <field name="name">Stock Location Rule For Repairs</field>
      <field name="model_id" search="[('model','=','stock.location')]" model="ir.model"/>
      <!-- <field name="domain_force">[(1,'=',1)]</field> -->
      <field name="domain_force">['|', ('company_id','=',1), ('company_id','=',3)]</field>
      <field name="perm_read" eval="True"/>
